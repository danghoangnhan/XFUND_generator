[flake8]
max-line-length = 88
extend-ignore = E203, E501, W503
exclude =
    .git,
    .venv,
    venv,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    __init__.py: F401
    tests/*: F401, F811
# Increased complexity threshold for existing code
max-complexity = 20
